{% extends 'base.html.twig' %}

{% block content %}

    <table class="table table-striped">
        <thead>
        <tr>
            <th>Username</th>
            <th>Name</th>
            <th>Surname</th>
            <th>Email</th>
            <th>Role</th>
            <th>Salary</th>
        </tr>
        </thead>
        <tbody>
        {#{% for user in users %}#}
            <tr>
                <td>{{ user.username }}</td>
                <td>{{ user.name }}</td>
                <td>{{ user.surname }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.role }}</td>
                <td>{{ user.salary }}</td>
            </tr>
        {#{% endfor %}#}

        </tbody>
    </table>

{% endblock %}