{% extends 'base.html.twig' %}
{% block content %}
    <div class="content">
        <div class="container-fluid">
            {% for user in users %}
                <div class="row">
                    <form method="POST" action="{{ path('config') }}">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Id</label>
                                    <input type="text" name="text-id" class="form-control" value="{{ user.id}}" disabled>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Username</label>
                                    <input type="text" name="text-username" class="form-control" value="{{ user.username }}">
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Email</label>
                                    <input type="email" name="text-email" class="form-control" value="{{ user.email }}">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Name</label>
                                    <input type="text" name="text-name" class="form-control" value="{{user.name}}" disabled>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Surname</label>
                                    <input type="text" name="text-surname" class="form-control" value="{{ user.username }}" disabled>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Phone Nr</label>
                                    <input type="text" name="text-phone" class="form-control" value="{{ user.phone_nr}}">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Birthday</label>
                                    <input type="date" name="text-date" class="form-control" value="{{ user.birthday }}" disabled>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Role</label>
                                    <input type="text" name="text-role" class="form-control" value="{{ user.role }}">
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Salary</label>
                                    <input type="number" step="0.01" name="text-salary" class="form-control" value="{{ user.salary }}">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Password</label>
                                    <input type="password" name="text-password" class="form-control" value="{{ user.password }}">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Confirm Password</label>
                                    <input type="password" name="text-password-confirm" class="form-control" value="{{ user.password }}">
                                </div>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-outline-danger pull-right" name="text-edit">Edit</button>
                    </form>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
{% endblock %}