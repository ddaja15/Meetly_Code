{% extends 'base.html.twig' %}
{% block content %}
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                    <div class="card">
                        <div class="header">
                            <h4 class="title">Create User</h4>
                        </div>
                        <div class="content">
                            <form method="POST" action = "{{ path('cremp') }}">
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label>Username</label>
                                            <input type="text" name="text-username" class="form-control" placeholder="Username" id="text-username"required>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label for="exampleInputEmail1">Email address</label>
                                            <input type="email" name="text-email" class="form-control" placeholder="Email" id="text-email" required>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label>Admin</label>
                                            <input type="number" name="text-admin" class="form-control" id="text-num" min="0" max="1" required>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>First Name</label>
                                            <input type="text" name="text-name" class="form-control" placeholder="Name" id="text-name" required>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Last Name</label>
                                            <input type="text" name="text-surname" class="form-control" placeholder="Last Name" id="text-last-name" required>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label>Phone Number</label>
                                            <input type="text" name="text-phone" class="form-control" placeholder="Phone Number" id="text-phone" required>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label>Birthday</label>
                                            <input type="date" name="text-birthday" class="form-control" placeholder="Birthday" id="text-birthday" required>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label>Role</label>
                                            <input type="text" class="form-control" name="text-role" placeholder="Role" id="text-role" required>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label>Salary</label>
                                            <input type="number" step="0.01" class="form-control" name="text-salary" placeholder="Salary" id="text-salary" required>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>New Password</label>
                                            <input type="password" id="pass" name="text-password" class="form-control" placeholder="**********" id="text-password" required>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Confirm Password</label>
                                            <input type="password" id="newpass" name="text-password-conf" class="form-control" placeholder="*********" required>
                                        </div>
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-outline-danger pull-right" id="addbutton">Add</button>
                                <div class="clearfix"></div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
        $(document).ready(function () {
            {% if status == 1%}
                <script>
                    $.notify({
                        icon: 'ti-user',
                        message: "New User Created"

                    }, {
                        type: 'danger',
                        timer: 4000
                    });
                </script>
            {% endif %}
            {% if status == 0%}
                <script>
                    $.notify({
                        icon: 'ti-user',
                        message: "User Could Not Be Created"

                    }, {
                        type: 'danger',
                        timer: 4000
                    });
                </script>
            {% endif %}
        });
{% endblock %}